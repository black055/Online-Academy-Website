<div class="container mt-50 mb-75" style="margin-top: 200px;">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2 mx-auto">
        <!-- login_wrapper -->
        <div class="login_wrapper">
          <div class="row" style="margin: 20px 100px;">
            <a href="/loginfb" style="width: 10%" class="social-login"><img src="/images/facebook.png" alt="" width="100%"></a>
            <a href="/logingg" style="width: 10%" class="social-login"><img src="/images/google.png" alt="" width="100%"></a>
            <a href="/logingg" style="width: 10%" class="social-login"><img src="/images/twitter.png" alt="" width="100%"></a>
            <a href="/logingithub" style="width: 10%" class="social-login"><img src="/images/github.png" alt="" width="100%"></a>
          </div>
          <h2>hoặc</h2>
          <form action="/login" method="POST" id="form_login">
            <div class="formsix-pos">
              <div class="form-group i-email"> <input type="text" name="email" class="form-control" required="" id="email2" placeholder="Nhập địa chỉ email *"> </div>
            </div>
            <div class="formsix-e">
              <div class="form-group i-password"> <input type="password" name="password" class="form-control" required="" id="password2" placeholder="Nhập mật khẩu *"> </div>
            </div>
            <div class="login_remember_box"> <label class="control control--checkbox"> </label> <a href="/forgotPassWord" class="forget_password"> Bạn đã quên mật khẩu?</a> </div>
            <div class="login_btn_wrapper"> <button type="submit" class="btn btn-success col"> Đăng nhập </button> </div>
          </form>
          <div class="login_message">
            <p>Bạn chưa có tài khoản? <a href="/register"> Đăng ký </a> </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{#section 'css'}}
<link rel="stylesheet" type="text/css" href="/styles/main_styles.css">
<link rel="stylesheet" type="text/css" href="/styles/responsive.css">
<link rel="stylesheet" type="text/css" href="/styles/login.css">
{{/section}}

{{#section 'js'}}
<script>
  $(document).ready(function () {
    $('#form_login').submit(function () {
      if ($('#password2').val().length < 8) {
        swal({
          title: "Sorry !",
          text: "Mật khẩu ít nhất 8 ký tự",
          icon: "warning",
          dangerMode: true,
        });
        return false;
      } else {
        const regex = /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
        if (!regex.test($('#email2').val().toLowerCase()) && $('#email2').val().toLowerCase() != 'admin') {
          swal({
            title: "Sorry !",
            text: "Tên đăng nhập không hợp lệ",
            icon: "warning",
            dangerMode: true,
          });
          return false;
        } else return true;
      }
    })
  });

  {{#if errorLogin}} 
    swal({
        title: "Sorry !",
        text: "{{errorLogin}}",
        icon: "warning",
        dangerMode: true,
    });
  {{/if}}
</script>
{{/section}}