{{#section 'js'}}
<script src="/js/courses.js"></script>
<script>
    let courses = [];
    let content = '';
    let length = 0;
    {{#each allCourses }}
    courses.push(`<div class="col-lg-6 course_col">
            <div class="course">
                <div class="course_image"><img style="width: 345px;" src="{{this.avatar}}" alt=""></div>
                <div class="course_body">
                    <h3 class="course_title"><a href="/courses/{{this._id}}">{{this.name}}</a></h3>
                    <div class="course_teacher">{{this.teacher}}</div>
                    <div class="course_text">
                        <p>{{this.description}}</p>
                    </div>
                </div>
                <div class="course_footer">
                    <div class="course_footer_content d-flex flex-row align-items-center justify-content-start">
                        <div class="course_info">
                            <i class="fa fa-graduation-cap" aria-hidden="true"></i>
                            <span>{{this.students}}</span>
                        </div>
                        <div class="course_info">
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <span>{{this.rating}} Ratings</span>
                        </div>
                        <div class="course_price ml-auto">{{this.price}}</div>
                    </div>
                </div>
            </div>
        </div>`);
    {{/each}}

    length = Math.ceil(courses.length / 10);
    $('#pagination_list').twbsPagination({
        totalPages: length,
        visiblePages: 5,
        first: 'Trang đầu',
        prev: 'Trước',
        next: 'Sau',
        last: 'Trang cuối',
        onPageClick: function (event, page) {
            content = '';
            for (let i = (page - 1) * 10; i < courses.length && i < (page - 1) * 10 + 10; i++) {
                content += courses[i];
            }
            $('.courses_row').html(content);
        }
    });
</script>
{{/section}}