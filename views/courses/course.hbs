{{#section 'js'}}
<script src="/js/course.js"></script>
<script>
    let rating = 0;
    let rate = 0;
    let total = 0;
    {{#each course.rate}}
    rate += {{this}} * ({{@index}} + 1);
    total += {{this}};
    {{/each}}
    console.log(rate, total);
    rating = (rate / (total * 5))*5;
    let flo = Math.floor(rating);
    let class_name = 'rating_r_' + flo;
    $('#rate').addClass(class_name);
</script>
{{/section}}