<form action="/course/update/{{course._id}}" method="POST" class="form" enctype="multipart/form-data">
  <div class="edit h-100 w-100">
    <div class="edit_chapter_container">
      <div class="container-fluid mx-auto">
        <div class="row">
          <div class="col-lg-7">
            <div class="edit_form">
              <div class="edit_chapter_title">Sửa nội dung khóa học</div>
              <div>
                <div class="form_title">Tên khóa học</div>
                <input type="text" class="comment_input" name="name" value="{{course.name}}" required="required">
              </div>
              <div>
                <div class="form_title">Mô tả ngắn gọn</div>
                <input type="text" class="comment_input" name="briefDes" value="{{course.briefDes}}" required="required">
              </div>
              <div>
                <div class="form_title">Yêu cầu của khóa học</div>
                <input type="text" class="comment_input" name="require" value="{{course.require}}" required="required">
              </div>
              <div>
                <div class="form_title">Mục tiêu khóa học</div>
                <input type="text" class="comment_input" name="purpose" value="{{course.purpose}}" required="required">
              </div>
              <div>
                <div class="form_title">Mô tả chi tiết</div>
                <textarea id="descEditor" name="description">{{course.description}}</textarea>
              </div>

              <div class="form-group">
                <label class="form_title" for="category">Lĩnh vực:</label>
                <div class="form-control" id="category">{{course.category}}</div>
              </div>

              <div>
                <div class="form_title">Giá</div>
                <input type="number" class="comment_input" name="price" min="0" value="{{course.price}}" required="required">
              </div>

              <div class="d-flex flex-column justify-content-center">
                <label for="isFinished" class="form_title font-weight-bold">Hãy check nếu nội dung khóa học đã hoàn
                  thành</label>
                <div class="d-flex align-items-center">
                  <input type="checkbox" name="isFinished" id="cbProgress" {{#if course.isFinished}}checked{{/if}}>
                  <span id="cbProgText" class="font-weight-bold">Đã hoàn thành</span>
                </div>
              </div>
            </div>

            <div class="upvideo">
              <div class="edit_chapter_title">
                <div class="d-flex justify-content-between">
                  <div class="">Sửa nội dung các chương hiện tại</div>
                </div>
              </div>

              <div class="chapter_title form_title">
                <div id="chapter_box_current">
                  {{!-- Thêm ô input tên mỗi chương ở đây --}}
                </div>
              </div>

              <div class="edit_chapter_title">
                <div class="d-flex justify-content-between">
                  <div class="">Thêm chương mới</div>
                  <div class="d-flex">
                    <div class="btn btn-danger rm-chapters mr-lg-1"><i class="far fa-trash-alt"></i></div>
                    <div class="btn btn-success btn-add-chapter d-flex"><i class="fa fa-plus align-self-center"
                        aria-hidden="true"></i></div>
                  </div>
                </div>
              </div>
                
              <div class="chapter_title form_title">
                <div id="chapter_box">
                  {{!-- Thêm ô input tên mỗi chương ở đây --}}
                </div>
              </div>
            </div>
          </div>

          <div class="col-lg-5 text-center">

            {{!-- Ảnh đại diện khóa học --}}
            <div class="course_thumbnail">
              <div class="edit_chapter_title">Ảnh đại diện của khóa học</div>
              <div class="thumbnail_box d-flex w-100 justify-content-center">
                <div class="file-loading">
                  <input id="thumbnail" name="thumbnail" type="file" class="mt-1">
                </div>
              </div>
              <div>
                <div class="form_title">Thông tin giảm giá</div>
                <div class="number d-flex justify-content-center align-items-center">
                  <div class="btn btn-outline-secondary minus-sale-off"><i class="fas fa-minus"></i></div>
                  <input type="number" class="comment_input" name="saleOff" id="saleOff" min="0" max="100" value="{{course.saleOff}}">
                  <div class="btn btn-outline-secondary plus-sale-off"><i class="fas fa-plus"></i></div>
                </div>
                <input type="range" id="points-sale-off" min="0" max="100" class="w-100" value="0">
              </div>
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <button type="submit" class="comment_button trans_200 mx-auto w-100">Đăng</button>
        </div>
      </div>
    </div>
  </div>
</form>

<div class="overlay-fade"></div>
<div class="loading">
  <div class="canvas canvas4">
    <div class="spinner4"></div>
  </div>
  <h4 class="text-center">Đang đăng tải...</h4>
</div>

{{#section 'css'}}
<link rel="stylesheet" href="https://cdn.plyr.io/3.5.6/plyr.css" />
<link rel="stylesheet" type="text/css" href="/styles/contact.css">
<link rel="stylesheet" type="text/css" href="/styles/contact_responsive.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.2/css/fileinput.min.css">
<link rel="stylesheet" type="text/css" href="/styles/edit_course.css">

{{/section}}

{{#section 'jsHead'}}
<script src='https://cdn.tiny.cloud/1/zkbs0drivq1btxfqv1gxw0h4ci8re203rj131aojg9mu74y2/tinymce/5/tinymce.min.js'
  referrerpolicy="origin">
  </script>
<script>
  tinymce.init({
    selector: '#descEditor',
    height: 450,
    plugins: 'paste link autolink lists table',
    menubar: false,
    toolbar: [
      'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright | forecolor backcolor | table link image media',
    ],
  });
</script>
